{
    "name": "armory_html5_player",
    "version": "0.0.0",
    "license": "MIT",
    "description": "",
    "productName": "armory_html5_player",
    "repository": "https://github.com/tong/armory_html5_player",
    "main": "main.js",
    "scripts": {
        "clean": "rm -rf electron_runtime*/ && rm -f app/main.js*",
        "build": "haxe build.hxml",
        "start": "electron app",
        "pack:linux": "electron-packager app electron-runtime --platform=linux --arch=x64 --out ./ --overwrite --icon=icon.png --protocol=armory-electron-runtime",
        "pack:darwin": "electron-packager app electron-runtime --platform=darwin --arch=x64 --out ./ --overwrite --icon=icon.png --protocol=armory-electron-runtime",
        "pack:win32": "electron-packager app electron-runtime --platform=win32 --arch=x64 --out ./ --overwrite --icon=icon.ico --protocol=armory-electron-runtime"
    },
    "dependencies": {
    },
    "devDependencies": {
        "electron": "22.0.0",
        "electron-packager": "^17.1.1"
    },
    "ignore": [
        "/node_modules/*",
        ".gitignore"
    ]
}
